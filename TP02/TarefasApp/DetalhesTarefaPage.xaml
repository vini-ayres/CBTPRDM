<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.DetalhesTarefaPage"
             Title="DetalhesTarefaPage">
    <StackLayout Padding="10">
        <Label Text="{Binding Titulo}" FontSize="20" FontAttributes="Bold" />
        <Label Text="{Binding Descricao}" />
        <Label Text="{Binding DataCriacao}" />
        <Label Text="{Binding Prioridade}" />
        <Button Text="Editar" Clicked="OnEditarClicked" />
        <Button Text="Excluir" Clicked="OnExcluirClicked" />
    </StackLayout>
</ContentPage>